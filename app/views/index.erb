<h1>Welcome to Robot World</h1>

<% @robots.each do |robot| %>
  <h3><%= robot.id %> <a href="/robots/<%= robot.id %>"><%= robot.name %><br>
      <%= robot.city %>, <%= robot.state %></a></h3><br>
  <a href="robots/<%= robot.id %>/edit">Edit</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type='hidden' name="_method" value="DELETE">
    <input type='submit' value="Delete">
  </form>
<% end %>
